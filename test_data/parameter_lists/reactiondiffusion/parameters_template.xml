<ParameterList name="Compadre">
  <ParameterList name="physics">
    <Parameter name="diffusion" type="double" value="1.0"/>
    <Parameter name="reaction" type="double" value="1.0"/>
    <Parameter name="shear" type="double" value="1.0"/>
    <Parameter name="lambda" type="double" value="1.0"/>
    <Parameter name="penalty" type="double" value="1e+0"/>
    <Parameter name="solution" type="string" value="polynomial"/>
    <Parameter name="operator" type="string" value="le"/> <!-- choices are l2, rd, and le -->
  </ParameterList>
  <ParameterList name="io">
    <Parameter name="input dimensions" type="int" value="2"/>
    <Parameter name="input file prefix" type="string" value="../test_data/grids/"/>
    <Parameter name="input file" type="string" value="dg_0.nc"/>
    <Parameter name="input dimensions" type="int" value="2" />
    <Parameter name="output file prefix" type="string" value="../test_data/"/>
    <Parameter name="output file" type="string" value="dg_out.nc"/>
    <Parameter name="preserve gids" type="bool" value="true"/>
    <Parameter name="gids name" type="string" value="ID"/>
    <Parameter name="plot quadrature" type="bool" value="true"/>
  </ParameterList>
  <ParameterList name="solver">
    <Parameter name="type" type="string" value="direct"/>
    <Parameter name="file" type="string" value="../test_data/parameter_lists/reactiondiffusion/solver_amg.xml"/>
    <Parameter name="blocked" type="bool" value="true"/>
    <!--<Parameter name="save residual over solution" type="bool" value="true"/>-->
  </ParameterList>
  <ParameterList name="remap">
    <Parameter name="weighting power" type="int" value="1"/>
    <Parameter name="porder" type="int" value="2"/>
    <Parameter name="dense solver type" type="string" value="SVD"/>
  </ParameterList>
  <ParameterList name="neighborhood">
    <Parameter name="search type" type="string" value="radius"/>
    <Parameter name="size" type="double" value="1.0"/>
    <Parameter name="uniform radii" type="bool" value="true"/>
    <!-- uniform radii must be true to ensure symmetry in neighborhoods -->
    <Parameter name="cutoff multiplier" type="double" value="1.8"/>
    <Parameter name="radii post search scaling" type="double" value="1.0"/>
  </ParameterList>
  <ParameterList name="halo">
    <Parameter name="dynamic" type="bool" value="true"/>
    <Parameter name="multiplier" type="double" value="16.0"/>
  </ParameterList>
</ParameterList>
